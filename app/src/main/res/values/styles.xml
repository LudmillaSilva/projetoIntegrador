<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="movieTitle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movieNotFoundInfo">
        <item name="android:textSize">@dimen/small</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/notfoundinfo</item>
    </style>

    <style name="CustomChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_font_color</item>
    </style>

    <style name="CustomTabTextLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomCardCorners2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners2</item>
    </style>

    <style name="ShapeAppearance_custom_corners2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>
</resources>
